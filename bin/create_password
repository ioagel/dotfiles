#!/bin/bash

# Function to display help
display_help() {
    echo "Usage: create_password [option...]"
    echo "Create passwords with at least 1 number, 1 capital letter and 1 symbol"
    echo
    echo "Options:"
    echo "  <number>         Choose the length of the passwords (default: 8)"
    echo "  -h, --help       Display this help message."
    echo
    exit 0
}

length=${1:-8}

# Main script logic
case "$1" in
    -h|--help)
      display_help
      ;;
    *)
      pwgen -cnys -r '0oOIl' ${length}
      ;;
esac

