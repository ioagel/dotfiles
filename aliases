# Use neovim instead of vim , if it is installed
alias soz='source ~/.zshrc'
# Unix
alias ll="ls -al"
alias ltr="ls -lAFhtr"
alias ln="ln -v"
alias df="df -h"
alias mkdir="mkdir -p"
alias vim="$EDITOR"
alias e="$EDITOR"
alias v="$VISUAL"

# terminal colors
alias day="alacritty-colorscheme -V apply $LIGHT_COLOR"
alias night="alacritty-colorscheme -V apply $DARK_COLOR"
alias toggle="alacritty-colorscheme -V toggle $LIGHT_COLOR $DARK_COLOR"

# Bundler
alias b="bundle"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# fixes remote term because of italics in iTerm through: xterm-256color-italic
# remote servers maybe will not support
alias ssh='TERM=xterm-256color ssh'

# Docker related
alias lzd='lazydocker'

# ssh related
alias sshk="ssh-keygen -R "

# sops encrypt - decrypt related
alias sei="sops -e -i"
alias sdi="sops -d -i"

# vagrant
# alias vg="vagrant"
# alias vggs="vagrant global-status"
# alias vgs="vagrant status"

# kubernetes
alias kns="kubens"
alias kctx="kubectx"

# i3 related
alias i3e="$EDITOR ~/.config/i3/config"

# Include custom secret aliases
[[ -f ~/.aliases.secret ]] && source ~/.aliases.secret

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
